{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "../dist",
        "baseUrl": "..",
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "sourceRoot": "./src",
        "rootDirs": [
            "./src",
            "../../common/*"
          ],
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*",
    ]
}